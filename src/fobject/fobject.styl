:host {
    display: flex
    flex-direction: row
    flex-wrap: nowrap     
    align-items: center
    position: relative
    font-size: 12px

    box-sizing: border-box
    height: 21px
    min-height: 21px
    width: 120px
    min-width: 50px

    #focus {
        display: block
        border: 1px solid black

        background: #232323
        color: #aaa
        box-shadow: 
            inset 0 0 0 1px rgba(0,0,0,0.1), 
            0px 0 0 1px rgba(255,255,255,0.1)

        transition: box-shadow .3s ease

        cursor: pointer
        & * {
            cursor: pointer
        }

        &:focus {
            outline: none
        }

        .content {                         
            display: block
            margin: 3px 4px
            font-size: 12px

            white-space: nowrap
            overflow: hidden

            .type {
                font-size: 10px
                color: #770
            }
        }
    }

    &([focused]) {                         
        #focus {
            box-shadow: 
                inset 0 0 0 1px rgba(0,0,0,0.1), 
                0px 0 0 1px #0c70a6, 
                0px 0 4px 1px rgba(12,112,166,0.8)
        }
    }

    .icon {
        margin-left: 5px
        font-size: 14px

        color: #aaa

        &:hover {
            color: #aaa + 50%
        }

        &:active {
            color: #aaa - 30%
        }

        &:focus {
            outline: none
        }
    }
}
