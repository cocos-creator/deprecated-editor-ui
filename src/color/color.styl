:host {
    totalHeight = 21

    display: inline-block

    box-sizing: border-box
    position: relative
    height: (totalHeight)px
    min-height: 21px
    max-height: 21px
    width: 120px
    min-width: 60px
    border: 1px solid black

    background: #232323
    color: #ddd
    box-shadow: 
        inset 0 0 0 1px rgba(0,0,0,0.1), 
        0px 0 0 1px rgba(255,255,255,0.1)

    transition: box-shadow .3s ease

    #focus:focus {
        outline: none
    }

    &([focused]) {                         
        box-shadow: 
            inset 0 0 0 1px rgba(0,0,0,0.1), 
            0px 0 0 1px #0c70a6, 
            0px 0 4px 1px rgba(12,112,166,0.8)
    }

    .border {
        duration = .2s

        position: absolute
        padding: 10px
        top: 25px
        right: 0px

        z-index: 11
        outline: 1px solid #222
        color: #bdbdbd
        background-color: #474747
        box-shadow: inset 0 0 0 1px rgba(255,255,255,0.1)

        transition: opacity duration ease

        &.hide {
            visibility: hidden
            opacity: 0.0
            transition: 
                visibility 0s ease duration, 
                opacity duration ease
        }
    }

    .preview-rgb-bg {
        position: relative
        display: block
        height: (totalHeight - 2 - 3)px
        width: 100%
        background-image: url('../img/transparent-bg.png')

        & * {
            cursor: pointer 
        }

        .preview-rgb {
            height: 100%
            width: 100%
            background-color: red
        }

        i {
            font-size: 8px
            color: black
            position: absolute
            right: 2px
            bottom: 2px
        }
    }

    .preview-alpha {
        display: block
        height: 3px
        width: 100%
        background: transparent
        background-color: white

        cursor: pointer 
    }
}
