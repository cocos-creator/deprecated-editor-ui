color-text = #aaa

:host {
	display: flex
	background: rgb(71,71,71)
	margin: 0px
	outline: none
	border: 1px solid  #0c70a6
	border-top: 0px
	.item {
		padding-left: 4px
		padding-right: 4px
		padding: 4px
		margin-top: 1px
		//border-top: 1px solid black
		height: 15px
		font-size: 12px
		color: color-text
		background: rgb(71,71,71)

		&:hover {
			background: rgb(63,63,63)
		}
	}

	.empty {
		padding-left: 4px
		padding-right: 4px
		padding: 4px
		border: 0
		height: 15px
		font-size: 12px
		color: red
	}

	.hide {
		display: none;
	}

	.data {
		width: 100%
		max-height: 200px
		overflow-x: hidden
		overflow-y: auto

		ul {
			list-style-type: none
			border-left: 1px solid black
			border-right: 1px solid black
			margin: 0px
			padding: 0px
			li {
				border-bottom: 1px solid black

			}
		}

		&::-webkit-scrollbar {
			height: 5px
			width: 5px
		}
		&::-webkit-scrollbar-thumb {
			background: rgba(255,255,255,0.3)
			border-left: 1px solid black
		}
		&::-webkit-scrollbar-track {
			background-color: rgba(128,128,128,0.1)
			border-left: 1px solid black
		}
		&::-webkit-scrollbar-corner {
			background-color: #171717
		}
		&::-webkit-scrollbar-button {
			display: none
		}
	}

	.item[select]{
		background: rgb(65,130,196)
	}
}
