color-text-focus = #00a6ff

:host {
    display: block
}

#focus {
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    align-items: center

    margin-top: 5px
    margin-bottom: 5px
    min-height: 22px
}

#field {
    margin-left: 5px
}

[flex-self-start] {
    margin-top: 5px
}

#fold {
    display: inline-block
    font-size: 14px
    width: 10px
    margin-right: 5px

    visibility: hidden
    cursor: pointer
    text-align: center
}

:host([focused]) #fold {
    color: color-text-focus
}

:host([foldable]) #fold {
    visibility: visible
}

.children {
    margin-left: 10px
}

:host([folded]) .children {
    display: none
}

:host-context([disabled]), :host([disabled]) {
    * {
        pointer-events: none
    }
}
