color-text = #ddd
color-text-focus = #00a6ff

:host {
    display: inline-block
    font-size: 12px
    white-space: nowrap

    overflow: hidden
    font-family: Helvetica,Arial,sans-serif
    cursor: default 
    text-align: left
    color: color-text
    text-shadow: 1px 1px 0 black

    &([focused]) {
        color: color-text-focus
    }
}

:host-context([disabled]), :host([disabled]) {
    * {
        pointer-events: none
    }

    color: color-text - 50%
}
