:host {
    display: inline-block
    box-sizing: border-box
    position: relative
    font-size: 10px
    border: 1px solid black

    background-color: #333
    border-radius: 2px
}

.border {
    border: 1px solid #555
    border-radius: 2px
}

:host-context([disabled]), :host([disabled]) {
    * {
        pointer-events: none
    }
}
