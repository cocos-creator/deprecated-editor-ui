size = 11px
blank-size = -4px

:host {
    flex: 0 0 size
    position: relative

    z-index: 2

    // horizontal resizer
    margin-top: blank-size
    margin-bottom: blank-size
    margin-left: 0px
    margin-right: 0px
    width: auto
    height: size

    &([hide]) {
        display: none;
    }

    &([vertical]) {
        margin-top: 0px
        margin-bottom: 0px
        margin-left: blank-size
        margin-right: blank-size
        width: size
        height: auto
    }

    &(:hover) {
        cursor: row-resize
    }

    &([vertical]:hover) {
        cursor: col-resize
    }

    &(.platform-win:hover) {
        cursor: ns-resize
    }

    &(.platform-win[vertical]:hover) {
        cursor: ew-resize
    }
}

.bar {
    position: absolute
    top: 4px
    left: 0px
    height: 3px
    width: 100%
}

:host([vertical]) .bar {
    position: absolute
    top: 0px
    left: 4px
    width: 3px
    height: 100%
}

:host(:hover) .bar {
    cursor: row-resize
}

:host([vertical]:hover) .bar {
    cursor: col-resize
}

:host(.platform-win:hover) .bar {
    cursor: ns-resize
}

:host(.platform-win[vertical]:hover) .bar {
    cursor: ew-resize
}
