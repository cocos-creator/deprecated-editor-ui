user-select() {
    -webkit-user-select: arguments
    user-select: arguments
}

* {
    font-family: Arial
    box-sizing: border-box

    /* pointer-events: none */
    cursor: default     
    user-select: none

    &:focus {
        outline: 0
    }
}

.flex-row {
    display: flex
    flex-direction: row
    flex-wrap: nowrap     
    align-items: center
}

.flex-col {
    display: flex
    flex-direction: column
    flex-wrap: nowrap     
    align-items: center
}

.flex-1 {
    flex: 1 1 60px
}

.flex-2 {
    flex: 2 2 60px
}

.flex-3 {
    flex: 3 3 60px
}

.flex-align-self-start {
    align-self: flex-start
    margin-top: 5px
}
