:host {
    display: inline-block

    position: relative
    min-width: 202px
    max-width: 202px
    padding: 10px
    border: 1px solid #555

    color: #bdbdbd
    background-color: #474747
    box-shadow: 0 0 15px 2px rgba(0,0,0,0.5)

    &(:focus) {
        outline: 0
    }
}

.color-group {
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    position: relative
}

.hue {
    position: relative
    width: 20px
    height: 150px
    border: 1px solid black
    margin-right: 6px

    cursor: crosshair

    background-image: url('../img/color-picker.png')
    background-position: 0px 0px

    .handle {
        position: absolute
        color: white

        i {
            position: absolute
            font-size: 12px
            top: -6px
            left: -6px
        }
    }
}

.color {
    position: relative
    width: 150px
    height: 150px
    border: 1px solid black
    margin-right: 6px

    cursor: crosshair

    background-image: url('../img/color-picker.png')
    background-position: -40px 0px

    .handle {
        position: absolute
        color: black

        i {
            position: absolute
            font-size: 13px
            top: -6px
            left: -6px
        }
    }
}

.opacity {
    position: relative
    width: 20px
    height: 150px
    border: 1px solid black

    cursor: crosshair

    background-image: url('../img/color-picker.png')
    background-position: -20px 0px

    .handle {
        position: absolute
        color: white
        right: 0

        i {
            position: absolute
            font-size: 12px
            top: -6px
            right: -6px
        }
    }
}

.input {
    margin-top: 5px
}
