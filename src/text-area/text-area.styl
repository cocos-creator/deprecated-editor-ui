:host {                         
    display: flex
    flex-direction: row
    flex-wrap: nowrap     
    align-items: baseline
    position: relative

    box-sizing: border-box
    min-height: 21px
    width: 120px
    min-width: 60px
    border: 1px solid black

    background: #232323
    color: #ddd
    box-shadow: 
        inset 0 0 0 1px rgba(0,0,0,0.1), 
        0px 0 0 1px rgba(255,255,255,0.1)

    transition: box-shadow .3s ease

    &([focused]) {                         
        box-shadow: 
            inset 0 0 0 1px rgba(0,0,0,0.1), 
            0px 0 0 1px #0c70a6, 
            0px 0 4px 1px rgba(12,112,166,0.8)
    }

    .input-area {                         
        flex: auto
        display: block
        padding: 3px 4px
        border: 0
        margin: 0
        font-size: 12px

        font-family: Helvetica,Arial,sans-serif
        background: transparent
        color: #aaa

        pointer-events: auto
        user-select: auto
        cursor: auto

        &::-webkit-input-placeholder {
            font-style: italic
            color: #666
            text-shadow: none
        }
        &:focus {
            outline: none
        }
    }

    .area {                         
        resize: none
        // &::-webkit-resizer {
        //     border: 1px solid rgba(255,0,0,1)
        // }

        &::-webkit-scrollbar {
            height: 8px
            width: 8px
        }
        &::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.2)
            border: 1px solid #999
            border-radius: 1px

            &:hover {
                background: rgba(255,255,255,0.4)
                border: 1px solid #aaa
            }
        }
        &::-webkit-scrollbar-track {
            background-clip: padding-box
            background-color: rgba(255,255,255,0.1)
        }
        &::-webkit-scrollbar-button {
            height: 0
            width: 0
        }
        &::-webkit-scrollbar-corner {
            background-color: #171717
        }
    }
}
