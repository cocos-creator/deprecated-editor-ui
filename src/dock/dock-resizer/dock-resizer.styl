size = 11px
blank-size = -4px
hover-color = rgb(12,112,200)

:host {
    flex: 0 0 size
    position: relative
    white-space: nowrap

    z-index: 1

    // horizontal resizer
    margin-top: blank-size
    margin-bottom: blank-size
    margin-left: 0px
    margin-right: 0px
    width: auto
    height: size

    .bar {
        position: absolute
        top: 4px
        left: 0px
        height: 3px
        width: 100%
    }

    &([vertical]) {
        margin-top: 0px
        margin-bottom: 0px
        margin-left: blank-size
        margin-right: blank-size
        width: size
        height: auto

        .bar {
            position: absolute
            top: 0px
            left: 4px
            width: 3px
            height: 100%
        }
    }

    &(:hover), &([active]) {
        cursor: row-resize
        .bar {
            cursor: row-resize
            background-color: hover-color
        } 
    }

    &(:hover[vertical]), &([active][vertical]) {
        cursor: col-resize
        .bar {
            cursor: col-resize
        } 
    }
}
