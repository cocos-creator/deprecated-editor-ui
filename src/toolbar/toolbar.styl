    //     margin-right: 0px
    // }

    span.space {
        display: block;
        width: 5px;
    }

    fire-ui-button::shadow {
        button {
            border-radius: 0px
            border: none
            background: none 

            &:hover {
                background-color: #4a4a4a
            }

            &:active {
                background-color: #4a4a4a - 10%
            }
        }
    }
}
