color-outter-border = #555
color-outter-border-focus = #0c70a6
color-inner-border = black

:host {
    display: flex
    position: relative
    margin-bottom: 15px

    box-sizing: border-box
    min-width: 60px
    min-height: 30px
    width: 240px
    height: 120px
    font-size: 12px
    border: 1px solid color-outter-border

    font-family: Helvetica,Arial,sans-serif

    &(:hover) {
        border: 1px solid color-outter-border + 30%
    }

    &([focused]) {
        border: 1px solid color-outter-border-focus
    }
}

#focus {
    display: flex
    flex-direction: column

    &:focus {
        outline: none
    }
}

.border {
    position: relative
    width: 100%

    overflow-x: hidden
    overflow-y: auto
    border: 1px solid color-inner-border

    box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1)
    color: #bdbdbd
    background-color: #2e2e2e
}

.inner {
    width: 100%
}

.btn-add {
    position: absolute
    right: -1px
    bottom: -14px

    border-left: 1px solid color-outter-border
    border-right: 1px solid color-outter-border
    border-bottom: 1px solid color-outter-border
}

:host(:hover) .btn-add {
    border-left: 1px solid color-outter-border + 30%
    border-right: 1px solid color-outter-border + 30%
    border-bottom: 1px solid color-outter-border + 30%
}

:host([focused]) .btn-add {
    border-left: 1px solid color-outter-border-focus
    border-right: 1px solid color-outter-border-focus
    border-bottom: 1px solid color-outter-border-focus
}

.btn-border {
    margin-top: -1px
    padding: 2px 10px
    border-left: 1px solid black
    border-right: 1px solid black
    border-bottom: 1px solid black

    background-color: #474747
    cursor: pointer

    &:hover {
        background-color: #474747 + 10%
    }

    &:active {
        background-color: #474747 - 10%
    }
}

i {
    font-size: 8px
    color: #aaa
}
