:host {
    display: inline-block

    box-sizing: border-box
    min-width: 60px
    min-height: 30px
    width: 120px
    height: 80px
    font-size: 12px

    color: #888
    background-color: #2e2e2e
    box-shadow: 
        inset 0 0 0 1px rgba(0,0,0,0.1), 
        0px 0 0 1px rgba(255,255,255,0.1),
        0 0 0 1px #000 inset

    #focus:focus {
        outline: none
    }

    transition: box-shadow .3s ease
    &(.focused) {
        box-shadow: 
            inset 0 0 0 1px rgba(0,0,0,0.1), 
            0px 0 0 1px #0c70a6, 
            0px 0 4px 1px rgba(12,112,166,0.8),
            0 0 0 1px #000 inset
    }

    #focus {
        display: block
        height: 100%
        width: 100%
    }
}
