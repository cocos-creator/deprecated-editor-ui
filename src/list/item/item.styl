:host {
    display: inline-block
    font-size: 12px
    white-space: nowrap
    padding: 3px 5px
    border-bottom: 1px solid black

    background-color: #404040
    font-family: Helvetica,Arial,sans-serif
    cursor: default 
    color: #ddd

    i {
        font-size: 10px

        &.fa-bars {
            color: #777
        }
        &.fa-times {
            color: #222
        }
    }

    span.space {
        width: 5px
    }
}
