:host {
    display: inline-block

    #focus {
        font-size: 12px
        white-space: nowrap
        padding: 3px 5px
        border-bottom: 1px solid black

        background-color: #404040
        font-family: Helvetica,Arial,sans-serif
        cursor: default 
        color: #bdbdbd
    }

    #focus:hover {
        background-color: #555
    }

    #focus:focus {
        outline: none
    }

    i {
        font-size: 10px

        &.fa-bars {
            margin-right: 5px
            color: #777
        }
        &.fa-times {
            color: #aaa
        }
    }

    .content {
        margin-right: 5px
    }

    .del {
        padding: 2px 4px
        cursor: pointer

        &:hover {
            background-color: #222
            // background-color: rgba(255,80,0,0.5)
        }
        &:active {
            background-color: #888
        }
    }
}
