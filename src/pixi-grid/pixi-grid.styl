:host {
    overflow: hidden
    position: relative
}

.labels {
    color: #999
    font-size: 12px
    position: absolute
    cursor: default
}

#hlabels {
    bottom: 5px
    left: 0px
}

#hlabels .label {
    position: absolute
    transform: translateX(5px)
}

#hlabels.top {
    top: 2px
    left: 0px
    bottom: auto
}

#hlabels.top .label {
    position: absolute
    transform: translateX(5px) translateY(100%)
}

#vlabels {
    top: 0px
    left: 5px
}

#vlabels .label {
    position: absolute
    transform: translateY(-100%) translateY(-2px)
}

.debug-info {
    position: absolute
    top: 10px
    right: 10px
    padding: 5px 15px

    border: 1px solid #999
    background: rgba( 0, 0, 0, 0.2 )
}
